{
    "extends": "expo/tsconfig.base",
    "compilerOptions": {
        "strict": true,
        "allowImportingTsExtensions": true,
        "typeRoots": ["./node_modules/@types", "./types"],
        "paths": {
            "@/*": ["./*"],
            "tailwind.config": ["./tailwind.config.js"]
        }
    },
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "nativewind-env.d.ts",
        ".expo/types/**/*.ts",
        "expo-env.d.ts",
        "types/**/*.d.ts"
    ]
}
